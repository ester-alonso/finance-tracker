<% if notice != nil %>
<div class="alert alert-success mt-4">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <%= notice %>
</div>
<% end %>
<% if alert != nil %>
<div class="alert alert-danger mt-4">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <%= alert %>
</div>
<% end %>